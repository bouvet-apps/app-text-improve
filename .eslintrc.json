{
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "jest"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "env": {
    "jest/globals": true
  },
  "rules": {
    "import/export": [
      "error"
    ],
    "import/extensions": [
      "error",
      "never"
    ],
    "import/newline-after-import": [
      "error"
    ],
    "import/no-absolute-path": "off",
    "import/no-extraneous-dependencies": [
      "error"
    ],
    "import/no-unresolved": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "func-names": "off",
    "global-require": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": "off",
    "no-cond-assign": [
      "error",
      "always"
    ],
    "no-console": "off",
    "no-duplicate-imports": [
      "error",
      {
        "includeExports": true
      }
    ],
    "no-import-assign": "error",
    "no-multi-spaces": "error",
    "no-plusplus": "off",
    "no-self-assign": "error",
    "no-sparse-arrays": "error",
    "no-tabs": "error",
    "no-template-curly-in-string": "error",
    "no-trailing-spaces": "error",
    "no-undef": "error",
    "no-underscore-dangle": "off",
    "no-unreachable": "error",
    "no-use-before-define": "error",
    "no-whitespace-before-property": "error",
    "object-shorthand": "off",
    "prefer-destructuring": "off",
    "quotes": [
      "error",
      "double"
    ],
    "radix": [
      "error",
      "as-needed"
    ],
    "require-atomic-updates": "error",
    "semi": [
      "error",
      "always"
    ],
    "semi-spacing": "error",
    "semi-style": [
      "error",
      "last"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "switch-colon-spacing": [
      "error",
      {
        "after": true,
        "before": false
      }
    ],
    "use-isnan": "error",
    "valid-typeof": "error"
  },
  "globals": {
    "require": true,
    "log": true,
    "exports": true,
    "resolve": true,
    "app": true,
    "fetch": true,
    "document": true,
    "window": true,
    "__": true
  },
  "overrides": [
    {
      "files": [
        "*.html",
        "*.ftl",
        "*.xml"
      ],
      "rules": {
        "max-len": "off"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "17.0.0"
    },
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".es6",
          ".ts",
          ".tsx",
          ".json"
        ]
      }
    }
  }
}
